{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                          
    "moduleResolution": "node",           
    "declaration": true,                           // Great: emits .d.ts
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,                       
    "forceConsistentCasingInFileNames": true,   
    "skipLibCheck": true          
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
